<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<center>
				<h1>Log In</h1>
			</center>

		  <%= form_for :user, url: sessions_path, class: "form-group" do |f| %>
		    <%= f.label :email %>
		    <%= f.email_field :email, placeholder: "Email", class: "form-control", :required => true, :autofocus => true %><br>

		    <%= f.label :password %>
		    <%= f.password_field :password, placeholder: "Password", class: "form-control", :required => true %><br>

		    <center>
		    	<%= f.submit "Log In", class: "btn btn-primary" %>
		    </center>
		  <% end %>

		</div>
	</div>
</div>